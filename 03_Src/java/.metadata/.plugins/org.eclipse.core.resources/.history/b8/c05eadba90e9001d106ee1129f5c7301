// class 

class Alpha {
	constructor() {
		window.addEventListener("load", this);
		
	}
	
	handleEvent(e) {
		console.log("handleEvent..." + e.type);
		this[e.type](e);
	}	
	
	load(e) {	// 나 자신을 불러옴. 
		document.forms.alpha.addEventListener("submit", this);	
	}
	submit(e) {
		e.preventDefault();
		
		let line;
		let column;
		let fg;
		let bg;
		let ch;
		
		console.log(`[${line}, ${column}, ${bg}, ${bg}, ${ch}]`)
		
	}
}

new Alpha();
