
select  * from dept;
select * from emp;
select * from course;
select * from student;

--DDL (Table Definition Language)
create table alpha (
	line number(2),  
	col	 number(2),
	fg	 number(2),
	bg	 number(2),
	ch	 char(1)
);

rename alpha to alpha2;	
-- 테이블 이름 변경
rename alpha2 to alpha;

truncate table alpha;	
-- 기존의 테이블 정보 삭제 // 폴더 안의 데이터 삭제
drop table alpha;	
-- 기존의 테이블 삭제 // 폴더 자체 삭제 

select * from alpha;	
-- 테이블 조회


insert into alpha values (2, 10, 30, 41, 'A');	
--새로운 데이터 삽입

rollback		-- 변경되기 이전 상태로 되돌림
commit		-- 변경된 내용을 영구 저장 




