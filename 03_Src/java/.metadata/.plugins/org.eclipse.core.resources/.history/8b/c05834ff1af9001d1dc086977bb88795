package com.example.controller;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;

import jakarta.servlet.http.HttpServletRequest;

@Controller
public class ScopeController {
	/*
	 * scope 객체 목적 => Data 저장, Data 공유, Data 전달  
	 * 
	 * 1. page
	 * 2. request
	 * 3. session 
	 * 4. application 
	 * 
	 */
	
	@GetMapping("/scope")
	void scope(HttpServletRequest request) {
		System.out.println("scope()...");
		int cnt=0;
		
		request.setAttribute("cnt", cnt);	// request scope 
		int requestCnt = (int)request.getAttribute("cnt");
		request.setAttribute("cnt", ++requestCnt);
		
		var session = request.getSession();	// session scope : web에 최초 접속할 때 ,
		session.setAttribute("cnt", cnt);
		int sessionCnt = (int)session.getAttribute("cnt");
		
		
		var application = request.getServletContext(); 	// application scope
		application.setAttribute("cnt", cnt);
		
		
	}

}
