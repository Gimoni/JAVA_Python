
public class EpochTimeExample {

	public static void main(String[] args) {
		long epoch = System.currentTimeMillis()/1000 + 9*60*60;	// 한국시간 GMT+9 / UTC+9
		
		int year = 0;
		int month = 0;
		int day = 0;
		
		int week = 0;
		long hour = epoch/60/60;
		long minute = 0;
		long secont = 0;
		
	}

}
