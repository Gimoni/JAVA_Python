package com.example.imple.user.model;

import org.hibernate.validator.constraints.Length;
import org.hibernate.validator.constraints.Range;

import com.example.standard.model.Modelable;

import jakarta.validation.constraints.Pattern;
import lombok.AllArgsConstructor;
import lombok.Builder;
import lombok.Data;
import lombok.NoArgsConstructor;
import lombok.NonNull;


@Data
@AllArgsConstructor(staticName ="of")
@NoArgsConstructor
@Builder
public class UserDTO implements Modelable<User>{
	@NonNull 
	@Length(min=1, max=20)
	String id;
	
	@NonNull 
	@Length(min=1, max20)
	@Range(min=1, max=20)
	String password;
	
////	@Pattern(regexp = "USER|ADMIN|SQL|MANAGER", message = "USER|ADMIN|SQL|MANAGER 만 허용됩니다." )
//	@Length(max=20)
//	String role;
//	

	@Override
	public User getModel() {
		return User.builder()
				   .id(id)
				   .password(password)
				   .role("USER")
				   .build();
	}
}
