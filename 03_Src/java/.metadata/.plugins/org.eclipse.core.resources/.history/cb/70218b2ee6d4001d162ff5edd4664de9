
select hiredate, round(hiredate, 'mm') 
  from emp; 
  -- round : single row change ;; 
  
select count(*),
	   min(hiredate), 
	   max(hiredate), 
	   sum(sal),
	   round(avg(sal), 2),
	   round(stddev(sal), 2),
	   round(variance(sal), 2)
  from emp;
  
  
  
select * 
  from emp
 where deptno=10
 order by sal desc;
 
 -- 그룹함수는 null을 제외 하고 동작 하기 때문에 
 -- 전체 개수 확인을 따로 해야함. count(*) 사용  
select  count(*), count(comm), sum(comm)
  from emp
 where comm is not null;