package example;

public class Exercise04 {
	 /*
	  * 1+(-2)+3+(-4)+... , 과 같은 식으로 계속 더해나갔을 때 몇까지 더해야 총합이
			 100 이상이 되는 지 구하시오.
	  */
	public static void main(String[] args) {
		int sum = 0;
		for(int i=1; i>=100; i++) {
			for(int j=-1; j<i; j++) {
				j++;
				i++;
				
			}
			System.out.println(i);

		}
		
	}

}
