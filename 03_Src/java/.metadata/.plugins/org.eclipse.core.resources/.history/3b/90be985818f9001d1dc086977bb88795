package com.example.controller;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;

import jakarta.servlet.http.HttpServletRequest;

@Controller
public class ScopeController {
	
	
	@GetMapping("/scope")
	void scope(HttpServletRequest request) {
		System.out.println("scope()...");
		int cnt=0;
		
		request.setAttribute("cnt", cnt);	// request scope 
		
		var session = request.getSession();	// session scope : web에 최초 접속할 때 ,
		session.setAttribute("cnt", cnt);
		
		var application = request.getServletContext(); 	// application scope
		application.setAttribute("cnt", cnt);
		
		
	}

}
