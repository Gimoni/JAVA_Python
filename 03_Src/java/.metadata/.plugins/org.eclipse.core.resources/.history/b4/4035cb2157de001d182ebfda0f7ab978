package com.example;

import java.time.LocalTime;
import java.time.temporal.ChronoUnit;
import java.util.ArrayList;
import java.util.LinkedList;
import java.util.List;

public class PerformanceExample {

	static class ListPerformance {
		int size;
		List<Integer> list;
		
		ListPerformance(int size, List<Integer> list) {
			this.size = size;
			this.list = list;
		}
		
		void create() {
			LocalTime start = LocalTime.now();
			for(int i=0; i<size; i++) {
				list.add(0, i); 
			}
			LocalTime end = LocalTime.now();
			
			String name = list.getClass().getName().substring(10);
			long elapse = start.until(end, ChronoUnit.MILLIS);
			
			System.out.printf("%10s Create(add) %5dê±´ : %5dms\n", name, size, elapse);
		}
	}
	
	public static void main(String[] args) {
//		ListPerformance<Integer> a = 
//				new ListPerformance<>(500000, new ArrayList<Integer>());
		var a =  new ListPerformance(500000, new ArrayList<Integer>());
		var b =  new ListPerformance(500000, new LinkedList<Integer>());

		a.create();
		b.create();
	}

}
