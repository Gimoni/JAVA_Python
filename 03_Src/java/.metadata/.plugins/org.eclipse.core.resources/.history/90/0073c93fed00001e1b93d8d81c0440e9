<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.imple.language.mapper.LanguageMapper">

<select id="countAll">
	select count(*) 
	  from country_language
</select>

<select id="selectCountryCode">
	select *
	  from country_code = upper(#{code})
</select>
<resultMap type="com.example.imple.country.model.Country" id="withCountryResultMap">
	<result property="code" column="code"/>
	<collection property="country" column="code" select="selectCountry"></collection>
</resultMap>

<select id="selectAll">
	select * 
	from country_language
</select>

<select id="selectAllWithCountryCode" resultMap="">
	select *
	  from country_language 
	order by country_language.country
</select>
</mapper>