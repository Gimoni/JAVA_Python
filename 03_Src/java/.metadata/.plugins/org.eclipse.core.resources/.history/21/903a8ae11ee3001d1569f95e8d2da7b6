/**
 * string mode에서는 8진수 033이 아닌 16진수를 사용해야함. 
 * 
 */
class VT100 {
	static clearScrean() {
		process.stdout.write("\x1b[2J");
	}
	
	static cursorMove(line, column) {
		process.stdout.write("\x1b["+line+";"+column+"H");
	}
	
	static setForeground(fg) {
		process.stdout.writer("\x1b["+fg+"m");
	}
	static setBackground(bg) {
		process.stdout.writer("\x1b["+bg+"m");
	}
	
	static reset(){
		process.stdout.writer("\x1b["+"0m");
	}
	
	static print(str){
		process.stdout.writer(str);
	}
}

VT100.clearScrean();
VT100.cursorMove(10, 10);
VT100.setForeground(31);
VT100.setBackground(44);
VT100.print("Hello");
VT100.reset();
