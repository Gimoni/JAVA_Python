<style type= "text/css">
html {
	border : 10px solid red;
}
body {
	border : 10px solid green;
}
div {
	border : 10px solid blue;
	width : 200px;
	height : 200px;
}
</style>
<script type="text/javascript">

window.onload = function(e) {
	let r = red.textContent;
	let g = green.textContent;
	let b = blue.textContent;
	
	box.style.backgroundColor = `rge(\${r}, \${g}, \${b})`;
	
	box.onmousedown = function(e) {
		console.log(e);

		let li = `
			<li>[\${str}] 
				button=\${e.button} 
			   altKey=\${e.altKey}
			   ctrlKey=\${e.ctrlKey}
			   shiftKey=\${e.shiftKey}
			   metaKey=\${e.metaKey}
			   [\${e.clientX}, \${e.clientY}]		// 화면상 좌표
			   [\${e.offsetX}, \${e.offsetY}]		
			<\li>
		`
		box.innerHTML = li + box.innerHTML;
	}

}
</script>
