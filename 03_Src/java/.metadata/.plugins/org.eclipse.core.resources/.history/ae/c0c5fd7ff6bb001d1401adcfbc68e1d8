
public class WhileStatementExample {

	// 반복의 횟수를 예상할 수 없을 때 while 문을 사용한다.
	public static void main(String[] args) {
		int dice1 = 0;
		int dice2 = 0;
		
		while (dice1 + dice2 !=5) {
			dice1 = (int)(Math.random()*6+1);
			dice2 = (int)(Math.random()*6+1);
			System.out.printf("[%d,%d]", dice1, dice2);
		}

	}

}
