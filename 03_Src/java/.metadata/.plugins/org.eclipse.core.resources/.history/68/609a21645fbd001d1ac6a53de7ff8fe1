
public class NullExample {
	/* 
	 * Reference type : Null
	 */
	public static void main(String[] args) {
		
		int num;			// java에서는 변수 초기화가 되어야 사용 할 수 있다. 
		String str;
		
//		System.out.println(num);		// 초기화 되지 않은 변수는 사용 할 수 없다. 
//		System.out.println(str);		// The local variable ---- may not have been initialized. 
		
		num = 0;			// primitive type 초기화.
		str = null;			// reference type 초기화 . 값을 할당하지 않은 상태 null. 아무 값을 가지고 있지 않은 상태. 
		
		System.out.println(num);
		System.out.println(str);
		System.out.println(str.length());
		
		
	}
}
