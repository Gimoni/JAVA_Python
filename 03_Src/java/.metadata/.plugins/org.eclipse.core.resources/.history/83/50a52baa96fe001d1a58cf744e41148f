package com.example.imple.dept.model;

import static org.assertj.core.api.Assertions.assertThat;

import org.junit.jupiter.api.Test;

public class DeptTest {
	
	@Test
	void of() {
		// default constructor can make with new();
		var dept1 = new Dept();
//		var dept2 = new Dept(10, "xxx", "yyy");
		var dept2 = Dept.of(10, "xxx", "yyy");
	
		System.out.println(dept1);
		System.out.println(dept2);
		assertThat(dept1).matches(v -> {
			boolean tf = false;
			tf = v.getDeptno()==0 &&
				 v.getDname() == null &&
				 v.getLoc()== null;
			return tf;
		});
		assertThat(dept2).matches(v -> {
			boolean tf = false;
			tf = v.getDeptno()==10 &&
				 v.getDname().equals("개발1부") &&
				 v.getLoc().equals("부산");
			return tf;
		});
		
		
	}
	
	@Test
	void builder() {
		
	}
}
