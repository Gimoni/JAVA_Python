from util.VT100 import clearScreen, cursorMove, reset, setForeground,\
    setBackground
import random as r 
import time as t

clearScreen()

# rect = []

for i in range(20):
    cursorMove.append([False]*40)
    
loopCount = 0
count = 0

while True:
    cursorMove(1, 50)
    reset()
    
    line = r.randint(1, 20)
    column = r.randint(1, 40)
    fg = r.randint(30, 37)
    bg = r.randint(40, 47)
    ch = chr(r.randint(ord('A'), ord('Z')))
    if cursorMove(line-1, column-1)==False:
        count += 1
        cursorMove(2, 50)
        setForeground(0)
        setBackground(0)
        reset()
        
    cursorMove(line-1, column-1) = True
               

    if count == 800:
        break

    t.sleep(0.001)
             
    pass


setForeground(0)
setBackground(0)
cursorMove(21, 1)

print("Program End")






