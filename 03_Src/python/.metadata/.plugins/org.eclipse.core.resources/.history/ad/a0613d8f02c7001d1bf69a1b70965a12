# test example
from util.VT100 import clearScreen, reset
from util.Font import printFont

import time

current = time.time(); 
clearScreen()

year = 2023
month = int(current)//60//60%24+9%24
day = int(current)//60//60%24+9%24



hour = int(current)//60//60%24 + 9
minute = int(current)//60%60
second = int(current)%60

# date = '2023-03-20'
date = f'{year:04d}-{month:02d}-{day:02d}'
for i in range(len(printDate(year, month, day))):
    ch = date[i]        # 저장 
    # print(date[i])
    # print(ch)
    printFont(ch, 10, 10 + i*7)
    
time = f'{hour:02d}:{minute:02d}:{second:02d}'
for i in range(len(time)):
        ch = time[i]
        printFont(ch, 20, 20 + i*7)

print()
print(date)
print(time)




reset()

print("Program End")