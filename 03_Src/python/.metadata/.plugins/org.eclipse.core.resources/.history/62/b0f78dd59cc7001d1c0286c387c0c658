def printDate(year, month, day):
    current = time();
    
    while(True):
        week = 4
        dayOfYear = 365
        if(year%4==0 and year%100!=0 or year%400==0):
            dayOfYear+=1
            
        secondOfYear = dayOfYear*24*60*60
        
        if (int(current)-secondOfYear >=0):
            current -= secondOfYear
            week += dayOfYear
        else: 
            dayOfYear
        
        year +=1
    return year 

    for i in range(1,13):
        dayOfMonth =[31,28,31,30,31,30,31,31,30,31,30,31]
        if(year%4==0 and year%100!=0 or year%400==0):
            dayOfYear[1] = 29
    
    secondOfMonth = int(dayOfMonth)*24*60*60
    if (int(current)-int(secondOfMonth) >= 0):
        current -= int(secondOfMonth)
        week += dayOfMonth
    else : 
        month==i
    # break
    return month
    
    day = int(current)/60/60/24
    return day

year, month, day = printDate()

week = 'Tuesday'

hour = int(current)//60//60%24 + 9
minute = int(current)//60%60
second = int(current)%60


week= ['MON','TUE','WED','THU','FRY','SAT','SUN']


# date = '2023-03-20'
printDate = f'{year:04d}-{month:02d}-{day:02d}'
for i in range(len(printDate)):
    ch = printDate[i]        # 저장 
    # print(date[i])
    # print(ch)
    printFont(ch, 10, 10 + i*7)
    
printTime = f'{hour:02d}:{minute:02d}:{second:02d}'
for i in range(len(printTime)):
        ch = printTime[i]
        printFont(ch, 20, 25 + i*7)

getWeekDay =f'{week}'
for i in range(len(getWeekDay[i])):
        ch = week[i]
        printFont(ch, 10 ,20)


