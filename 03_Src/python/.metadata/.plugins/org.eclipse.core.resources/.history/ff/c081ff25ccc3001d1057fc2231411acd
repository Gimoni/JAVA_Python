


import turtle
from tkinter import mainloop
from math import sin, radians


t = turtle.Turtle('turtle')

turtle.showturtle(10)
t.up()
t.backward(180)
t.down()
t.speed(0.1)

for x in range(360):
    y = sin(radians(x)) * 200
   
    turtle.goto(x, y)
    print (x-180, y)
    t.setpos(x-180, y)



mainloop()


