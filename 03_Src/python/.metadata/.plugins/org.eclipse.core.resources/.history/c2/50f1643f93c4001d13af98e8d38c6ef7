def printFont(n, line, column):

    fg = 31
    bg = 44
    
    for i in range(5):
        for j in range(5):
            cursorMove(line+i, column+j)
            if number[n][i][j] == ' ':
                reset()
            else:
                setForeground(fg)
                setBackground(bg)
            print(number[n][i][j], end='')
    
            # 색대비 변경.. 
            tmp = fg    # tmp에 fg 임시 저장 중.. 
            fg = bg
            bg = tmp 
    
            fg = 30 + fg%10
            bg = 40 + bg%10
    reset()


printFont(0, 1, 1)
printFont(1, 1, 1 + 6)
printFont(2, 1, 1 + 6 + 6)
printFont(3, 1, 1 + 6 + 6 + 6)
print("Program End")